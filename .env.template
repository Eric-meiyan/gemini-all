# Gemini CLI Hub Environment Configuration
# Copy this file to .env.local and fill in your values

# === REQUIRED CONFIGURATION ===

# PostgreSQL database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/geminicli_hub

# Secret key for NextAuth.js authentication
NEXTAUTH_SECRET=your-secret-key-here

# Base URL for NextAuth.js callbacks
NEXTAUTH_URL=https://your-domain.com

# Public web URL for the application
NEXT_PUBLIC_WEB_URL=https://geminicli.org

# === OPTIONAL CONFIGURATION ===

# OpenAI API key for AI features
# OPENAI_API_KEY=sk-...

# Google Gemini API key
# GOOGLE_GENERATIVE_AI_API_KEY=AIza...

# Stripe secret key for payments
# STRIPE_SECRET_KEY=sk_...

# Stripe publishable key
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_...

# Stripe webhook secret for payment verification
# STRIPE_WEBHOOK_SECRET=whsec_...

# GitHub repository for Giscus comments
# NEXT_PUBLIC_GISCUS_REPO=username/repository

# GitHub repository ID for Giscus
# NEXT_PUBLIC_GISCUS_REPO_ID=R_...

# GitHub discussion category ID for Giscus
# NEXT_PUBLIC_GISCUS_CATEGORY_ID=DIC_...

# SMTP server host for email
# EMAIL_SERVER_HOST=smtp.gmail.com

# SMTP server port
# EMAIL_SERVER_PORT=587

# SMTP username
# EMAIL_SERVER_USER=your-email@gmail.com

# SMTP password
# EMAIL_SERVER_PASSWORD=your-app-password

# From email address
# EMAIL_FROM=noreply@geminicli.org
